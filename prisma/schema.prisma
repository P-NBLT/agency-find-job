generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agency{
id Int @id @default(autoincrement())
name String
city String
region String
size String
website String
logo String
cityRef City @relation(fields: [cityId] ,references: [id])
cityId Int 
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  admin Boolean @default(false)
  verified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City{
  id Int  @id @default(autoincrement()) 
  city String @unique
  latitude Float
  longitude Float
  count Int
  agencies Agency[]
}


model Dashboard{
  id Int @id @default(autoincrement())
  userName String
  emailUser String
  companyName String
  city String
  region String
  size String
  website String
  logo String
  verified Boolean @default(false)
  verifiedBy String @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}